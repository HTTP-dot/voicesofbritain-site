<h2>Latest Articles</h2>

<ul>
  {% for post in collections.post reversed %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a><br/>
      {% for tag in post.data.tags %}
        <span class="tag">{{ tag }}</span>
      {% endfor %}
    </li>
  {% endfor %}
</ul>

