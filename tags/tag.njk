---
layout: layout.njk
permalink: "/tags/{{ tag | slug }}/"
pagination:
  data: collections[tag]
  size: 10
  alias: posts
  addAllPagesToCollections: true
---

<h1>Articles tagged: {{ tag }}</h1>

<ul>
  {% for post in posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <small> â€“ {{ post.date | date("MMMM D, YYYY") }}</small>
    </li>
  {% endfor %}
</ul>
