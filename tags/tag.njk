---
layout: layout.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter: tagFilter
permalink: "/tags/{{ tag | slug }}/"
---

<h1>Articles tagged: {{ tag }}</h1>

<ul>
  {% for post in collections[tag] %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <small> â€“ {{ post.date | date("MMMM D, YYYY") }}</small>
    </li>
  {% endfor %}
</ul>
